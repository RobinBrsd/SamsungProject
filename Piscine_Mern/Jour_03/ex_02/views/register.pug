extends layout

block content
    h1= title
    form(method="post")
        div.input
            span.label Login : 
            input(type="text", name="Login" min-length="5" max-length="20" required)
        div.input
            span.label Email : 
            input(type="email", name="Email" required)
        div.input
            span.label Password : 
            input(type="password", name="Password" required)
        div.input
            span.label Password Confirm : 
            input(type="password", name="PasswordConfirm" required)
        div.actions
            input(type="submit", value="Inscription")